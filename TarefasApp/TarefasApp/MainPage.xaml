<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Lista de Tarefas"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <ListView x:Name="lista_tarefas" ItemTapped="OnItemClicked">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10" Margin="0,5">
                                <Label Text="{Binding Titulo}" 
                                       FontAttributes="Bold"
                                       FontSize="18" />
                                <Label Text="{Binding Descricao}" 
                                       FontSize="14"
                                       TextColor="Gray" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button 
                x:Name="AddPageBtn"
                Text="Adicionar tarefa"
                Clicked="OnAddPageClicked" 
                FontSize="18"
                CornerRadius="25"
                HeightRequest="50"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
