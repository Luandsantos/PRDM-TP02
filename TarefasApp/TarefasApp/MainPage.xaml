<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <ListView x:Name="lista_tarefas" ItemTapped="OnItemClicked">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell
                            Text="{Binding Titulo}"
                            Detail="{Binding Descricao}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button 
                x:Name="AddPageBtn"
                Text="Adicionar tarefa"
                Clicked="OnAddPageClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
