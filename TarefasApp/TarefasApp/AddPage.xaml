<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.AddPage"
             Title="AddPage">
    <VerticalStackLayout>
        <Label
            Text="Título da tarefa:" />
        <Entry x:Name="input_titulo" />

        <Label
            Text="Descrição da tarefa:" />
        <Entry x:Name="input_descricao" />

        <Label
            Text="Data de criação da tarefa:" />
        <DatePicker x:Name="input_data" 
            MinimumDate="01/01/2000"
            MaximumDate="12/31/2099" />
        <Label
            Text="Prioridade da tarefa:" />
        <Entry x:Name="input_prioridade" />

        <Button
            x:Name="AddTaskBtn"
            Text="Adicionar tarefa" 
            Clicked="AddTaskClicked" />

    </VerticalStackLayout>
</ContentPage>