<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.DetailsPage"
             Title="DetailsPage">
    <VerticalStackLayout
         Padding="20,0"
         Spacing="15">


        <Label Text="Detalhes da Tarefas"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*">
            <Label x:Name="nome_tarefa"
                   FontSize="20"
                   FontAttributes="Bold"
                   Grid.Row="1"
                   HorizontalOptions="FillAndExpand"/>
        </Grid>

        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*">
            <Label x:Name="descricao_tarefa"
                   Grid.Row="1"
                   HorizontalOptions="FillAndExpand"/>
        </Grid>

        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*">
            <Label Text="Data"
                   Grid.Row="0"
                   HorizontalOptions="Start"/>
            <Label x:Name="data_tarefa"
                   Grid.Row="1"
                   HorizontalOptions="FillAndExpand"/>
        </Grid>

        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*">
            <Label Text="Prioridade"
                   Grid.Row="0"
                   HorizontalOptions="Start"/>
            <Label x:Name="prioridade_tarefa"
                   Grid.Row="1"
                   HorizontalOptions="FillAndExpand"/>
        </Grid>
        
        <Label x:Name="id_tarefa" IsVisible="Hidden"
                        Text="" />

        <Button
            x:Name="EditTaskBtn"
            Text="Editar tarefa" 
            Clicked="EditTaskClicked" />

        <Button
            x:Name="DeleteTaskBtn"
            Text="Excluir tarefa" 
            Clicked="DeleteTaskClicked" />

    </VerticalStackLayout>
</ContentPage>